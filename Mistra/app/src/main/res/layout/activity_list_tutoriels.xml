<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@android:color/white"
    tools:context="fr.formation.matelli.mistra.ListTutoriels"
    >

    <RelativeLayout
        android:id= "@+id/headerTutos"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_degade_head"
        android:layout_alignParentTop="true">

        <ImageButton
            android:id="@+id/btnRetourHome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/arrow_right"
            android:layout_alignParentStart="false"
            android:background="@null"
            android:contentDescription="@string/retour"
            android:padding="15dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tutos"
            android:layout_centerInParent="true"
            android:textColor="@android:color/white"
            android:textSize="20sp"/>


    </RelativeLayout>

    <ExpandableListView
        android:id="@+id/expandablelisteTutos"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/headerTutos"
        android:layout_alignBottom="@+id/view"
        android:groupIndicator="@null"
        android:divider="@null"
        android:childDivider="@drawable/degrade_cellule"
        android:background="@android:color/white"/>

    <RelativeLayout
        android:id="@+id/no_tutoriels"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center"
        android:visibility="gone">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tutoriel_aucun_tutoriel"
            android:gravity="center" />
    </RelativeLayout>


    <View
        android:id = "@+id/view"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@android:color/background_dark"/>

    <LinearLayout
        android:id="@+id/linearMenu"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp"
        android:background="@android:color/white"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        style="?android:attr/buttonBarStyle"
        android:visibility="gone">



        <Button
            android:id="@+id/btnFormationFooterTutos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/ico_formation_footer"
            android:text="@string/formations"
            android:textColor="@android:color/darker_gray"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="12sp"
            android:background="@android:color/white"
            style="?android:attr/buttonBarStyle"/>
        <Button
            android:id="@+id/btnTutosFooterTutos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/ico_tuto_footer_active"
            android:text="@string/tutos"
            android:textColor="@android:color/holo_purple"

            android:layout_weight="1"
            android:gravity="center"
            android:textSize="12sp"
            android:background="@android:color/white"
            style="?android:attr/buttonBarStyle"/>
        <Button
            android:id="@+id/btnDevisFooterTutos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/ico_devis_footer"
            android:text="@string/devisMenu"
            android:textColor="@android:color/darker_gray"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="12sp"
            android:background="@android:color/white"
            style="?android:attr/buttonBarStyle"/>
        <Button
            android:id="@+id/btnContactFooterTutos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/ico_contact_footer"
            android:text="@string/contactMenu"
            android:textColor="@android:color/darker_gray"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="12sp"
            android:background="@android:color/white"
            style="?android:attr/buttonBarStyle"/>

    </LinearLayout>



</LinearLayout>





