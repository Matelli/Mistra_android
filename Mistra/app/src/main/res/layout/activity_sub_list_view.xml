<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="fr.formation.matelli.mistra.SubListView">

    <RelativeLayout
        android:id= "@+id/headerSubList"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_degade_head"
        android:layout_alignParentTop="true"
        >

        <ImageButton
            android:id="@+id/btnRetourHome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/arrow_right"
            android:layout_alignParentStart="false"
            android:background="@null"
            android:contentDescription="@string/retour"
            android:padding="15dp"

            />

        <TextView
            android:id="@+id/tvTitreSubList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/tutos"
            android:layout_centerInParent="true"
            android:textColor="@android:color/white"
            android:textSize="20sp"/>


    </RelativeLayout>

    <ListView
        android:id="@+id/listViewSubList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/headerSubList"
        android:layout_alignBottom="@+id/view"
        android:groupIndicator="@null"
        android:divider="@null"
        android:childDivider="@drawable/degrade_cellule"
        android:background="@android:color/white"

        />

</RelativeLayout>
