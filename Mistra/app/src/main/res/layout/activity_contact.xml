       <TextView
           android:id="@+id/view"
           android:layout_width="fill_parent"
           android:layout_height="15dp"
           android:background="@drawable/vague_contact"
           />
<LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_below="@id/view"
    android:layout_alignParentBottom="true"
    android:background="@drawable/degrade_cellule"
    android:padding="5dp"
    android:layout_gravity="bottom">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/logo_facebook"
            android:layout_weight="1"
            android:background="@null"
            android:layout_margin="2dp"
            android:id="@+id/btn_facebook" />
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/logo_twitter"
            android:layout_weight="1"
            android:background="@null"
            android:layout_margin="2dp"
            android:id="@+id/btn_twitter" />
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/logo_google"
            android:layout_weight="1"
            android:background="@null"
            android:layout_margin="2dp"
            android:id="@+id/btn_google" />
        </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        >

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/logo_linkedin"
            android:layout_weight="1"
            android:background="@null"
            android:layout_margin="2dp"
            android:id="@+id/btn_linkedin" />
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/logo_viadeo"
            android:layout_weight="1"
            android:background="@null"
            android:layout_margin="2dp"


            android:id="@+id/btn_viadeo" />

    </LinearLayout>
</LinearLayout>

    </LinearLayout>



</RelativeLayout>
